<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Home">
    <ViewFlipper
        android:scrollbarFadeDuration="1000"
        android:layout_width="match_parent"
        android:layout_height="396dp"
        android:autoStart="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="397dp"
            android:layout_marginBottom="8dp"
            android:baselineAligned="false"
            android:scaleType="centerCrop"
            android:src="@drawable/homebackgroud" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="397dp"
            android:layout_marginBottom="8dp"
            android:baselineAligned="false"
            android:scaleType="centerCrop"
            android:src="@drawable/back2"/>
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="397dp"
            android:layout_marginBottom="8dp"
            android:baselineAligned="false"
            android:scaleType="centerCrop"
            android:src="@drawable/back3"/>
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="397dp"
            android:layout_marginBottom="8dp"
            android:baselineAligned="false"
            android:scaleType="centerCrop"
            android:src="@drawable/back4"/>
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="397dp"
            android:layout_marginBottom="8dp"
            android:baselineAligned="false"
            android:scaleType="centerCrop"
            android:src="@drawable/back5"/>

    </ViewFlipper>

    <TextView
        android:id="@+id/name1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="365dp"
        android:background="@color/colorPrimaryDark"
        android:text="Breath"
        android:textAlignment="center"

        android:textColor="@color/whiteback"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="407dp"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-light"
        android:text="Nature"
        android:textAlignment="center"
        android:textColor="@color/logo"
        android:textSize="36sp" />


    <Button
        android:id="@+id/show_plant_btn"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="220dp"
        android:background="@drawable/roundbtn"
        android:clickable="true"
        android:drawableRight="@drawable/green"
        android:fontFamily="sans-serif-light"
        android:text="   show plants"
        android:textAllCaps="true"
        android:textColor="@color/logo"
        android:textSize="18sp"
        android:visibility="visible" />




</FrameLayout>